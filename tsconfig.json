{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "declaration": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["node"],
    "plugins": [
      {
        "transform": "ts-transformer-keys/transformer"
      }
    ]
  },
  "include": [
    "src/**/*",
    "migrations/*"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.lib.ts"
  ]
}